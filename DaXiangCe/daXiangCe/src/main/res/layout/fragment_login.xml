<?xml version="1.0" encoding="utf-8"?>

<!-- login -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_guide_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_login"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|left"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/blank"
        android:scaleType="center"
        android:src="@drawable/add_album_cancle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/blank"
            android:scaleType="centerInside"
            android:src="@drawable/logo_with_solgan_cn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_padding"
        android:paddingRight="@dimen/login_padding">

        <include layout="@layout/layout_4th_auth" />
    </LinearLayout>

</LinearLayout>