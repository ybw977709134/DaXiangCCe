<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/binding_phone_guide_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title" />

        <include layout="@layout/layout_divider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/preference_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/preference_margin_top"
            android:layout_marginTop="@dimen/image_detail_pager_margin"
            android:src="@drawable/binding_phone_guide_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/binding_phone_guide_content"
            android:textSize="@dimen/text_size_title" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/preference_padding">

        <TextView
            android:id="@+id/tv_binding_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_gravity="center"
            android:background="@drawable/add_album_option_blue"
            android:gravity="center"
            android:text="@string/binding_phone"
            android:textColor="@color/clickable_blue_white" />


        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/preference_padding"
            android:gravity="center"
            android:textColor="@color/clickable_light_grey"
            android:text="@string/skip" />
    </LinearLayout>

</LinearLayout>
